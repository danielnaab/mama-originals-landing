{
  "name": "soilio-landing",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "build": "npm run clean && parallelshell 'npm run build:js' 'npm run build:sass' 'npm run build:html' 'npm run build:images' && npm run version-assets",
    "build:html": "cp src/index.html dist",
    "build:images": "imagemin src/images/* dist/images",
    "build:js": "browserify src/main.js | uglifyjs -cm > dist/bundle.js",
    "build:sass": "node-sass --include-path scss src/styles/styles.scss | uglifycss > dist/styles.css",
    "clean": "rm -rf dist && mkdir dist",
    "deploy": "npm run build && aws --profile=crushingpennies s3 sync dist s3://www.soil.io",
    "serve": "ecstatic -p 9000 dist",
    "watch": "npm run clean && parallelshell 'npm run watch:js' 'npm run watch:sass' 'npm run watch:html' 'npm run build:images' 'npm run watch:images' 'npm run serve'",
    "watch:html": "nodemon -w src -e html -x \"npm run build:html\"",
    "watch:images": "nodemon -w src/images -x \"npm run build:images\"",
    "watch:js": "watchify src/main.js -o dist/bundle.js -dv",
    "watch:sass": "nodemon -w src -e scss -x \"npm run build:sass\"",
    "version-assets": "node bin/version-assets.js"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-plugin-transform-runtime": "^6.1.18",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "ecstatic": "~0.8.0",
    "imagemin-cli": "^2.0.0",
    "main-loop": "^3.2.0",
    "node-sass": "^3.4.2",
    "node-version-assets": "^1.0.1",
    "nodemon": "^1.8.1",
    "parallelshell": "^2.0.0",
    "uglifycss": "0.0.19",
    "uglifyjs": "~2.4.10",
    "virtual-dom": "^2.1.1",
    "watchify": "^3.6.1"
  }
}
